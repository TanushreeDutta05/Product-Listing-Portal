<%- include('../partials/header') %>

<div class="row align-items-center gy-4">
  <!-- Product Image -->
  <div class="col-12 col-md-6">
    <% if(product.image) { %>
      <img src="/uploads/products/<%= product.image %>" class="img-fluid rounded-4 shadow-sm w-100" alt="<%= product.name %>">
    <% } %>
  </div>

  <!-- Product Info -->
  <div class="col-12 col-md-6">
    <h2 class="mb-3 fw-bold"><%= product.name %></h2>
    <p class="mb-2 text-muted"><strong>Category:</strong> <%= product.category.name %></p>
    <p class="lead"><%= product.description %></p>

    <a href="/" class="btn btn-outline-secondary mt-3">‚Üê Back to Products</a>
  </div>
</div>

<%- include('../partials/footer') %>
