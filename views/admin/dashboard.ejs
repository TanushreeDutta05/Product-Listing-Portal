<%- include('../partials/header') %>

<div class="row g-4">
  <!-- Dashboard Heading -->
  <div class="col-12">
    <h2 class="fw-bold text-center mb-4">Admin Dashboard</h2>
  </div>

  <!-- Total Products -->
  <div class="col-12 col-md-6">
    <div class="card shadow-sm border-0 rounded-4 bg-light">
      <div class="card-body text-center">
        <h5 class="card-title">Total Products</h5>
        <p class="display-6 fw-semibold text-primary"><%= totalProducts %></p>
      </div>
    </div>
  </div>

  <!-- Total Categories -->
  <div class="col-12 col-md-6">
    <div class="card shadow-sm border-0 rounded-4 bg-light">
      <div class="card-body text-center">
        <h5 class="card-title">Total Categories</h5>
        <p class="display-6 fw-semibold text-success"><%= totalCategories %></p>
      </div>
    </div>
  </div>

  <!-- Navigation Buttons -->
  <div class="col-12 text-center mt-3">
    <a href="/admin/products" class="btn btn-outline-primary btn-lg me-2">Manage Products</a>
    <a href="/admin/categories" class="btn btn-outline-success btn-lg">Manage Categories</a>
  </div>
</div>

<%- include('../partials/footer') %>
